    <style name="Theme.MyQoran" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#512DA8</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorDivider">@color/divider_light</item>
        <item name="primary_50">@color/primary_light_50</item>
        <item name="sliderTrackPrimaryColor">@color/primary_light_50</item>
        <item name="greenCustom">@color/greenCustom_light</item>
        <item name="primaryBlueText">@color/primary_blue_light_text</item>
        <item name="primaryBlue">@color/primary_blue_light</item>
        <item name="primaryGreenText">@color/primary_green_light_text</item>
        <item name="primaryGreen">@color/primary_green_light</item>
        <item name="primaryRed">@color/primary_red_light</item>
        <item name="primaryRedText">@color/primary_red_text</item>
        <item name="primaryDefault">@color/purple_500</item>
        <item name="clockTrackColor">#F701FF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

