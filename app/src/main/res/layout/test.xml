<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/menu"
            app:menu="@menu/menutoolbar"
            app:title="My Qur'an"
            app:titleCentered="true"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Assalamu'alaikum"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Babang!"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/material_on_surface_stroke"
            android:elevation="10dp"
            app:strokeWidth="2dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/gradient"
                android:layout_height="125dp">

                <TextView
                    android:id="@+id/quran"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Qur'an Completion"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/lastComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quran"
                    android:layout_marginLeft="10dp"
                    android:text="Last: Completion: Al-Baqarah"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFF" />

                <ImageView
                    android:id="@+id/imagequran"
                    android:layout_width="105dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_quran_logo" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/indicatorProgress"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="22dp"
                    android:textColor="#FFF"
                    android:layout_marginBottom="-20dp"
                    android:layout_toEndOf="@+id/lastComplete"
                    android:text="50%" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/indicatorProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lastComplete"
                    android:layout_alignParentStart="@+id/imagequran"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/imagequran"
                    android:progress="50"
                    app:indicatorColor="#03A9F4"
                    app:indicatorDirectionLinear="endToStart"
                    app:trackColor="#FFF" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="My Schedule"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:text="See all"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeColor="@color/material_on_background_emphasis_medium"
                    app:strokeWidth="2dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="95dp"
                            android:text="9 Feb 2021"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="45dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="Quran Juz 1"
                            android:layout_marginTop="10dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:text="Al-Fatihah 1 - Al-Baqarah 141"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="TPQ Muslim"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            app:drawableStartCompat="@drawable/ic_baseline_book_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:cardCornerRadius="5dp"
                    app:strokeColor="@color/material_on_background_emphasis_medium"
                    app:strokeWidth="3dp"
                    android:elevation="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="100dp"
                            android:text="10 Mar 2021"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="45dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="Quran Juz 30"
                            android:layout_marginTop="10dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:text="Al-Fatihah 1 - Al-Baqarah 141"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="TPQ Muslim"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            app:drawableStartCompat="@drawable/ic_baseline_book_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:cardCornerRadius="5dp"
                    app:strokeColor="@color/material_on_background_emphasis_medium"
                    app:strokeWidth="3dp"
                    android:elevation="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="95dp"
                            android:text="7 Apr 2021"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="45dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="Quran Juz 5"
                            android:layout_marginTop="10dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:text="Al-Fatihah 1 - Al-Baqarah 141"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="TPQ Muslim"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            app:drawableStartCompat="@drawable/ic_baseline_book_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Community"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:text="See all"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    app:strokeColor="@color/material_on_primary_emphasis_high_type"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/ic_baseline_book_24"
                                android:layout_margin="2dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Quran Lovers"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/material_on_surface_emphasis_high_type"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="100 Members"
                                android:textSize="15sp"
                                android:textColor="@color/material_on_surface_emphasis_medium"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:backgroundTint="#00000000"
                                android:layout_width="match_parent"
                                android:src="@drawable/next"
                                android:layout_height="75dp"
                                app:tint="@color/material_on_surface_emphasis_medium" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    app:strokeColor="@color/material_on_primary_emphasis_high_type"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/ic_baseline_book_24"
                                android:layout_margin="2dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Quran Lovers"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/material_on_surface_emphasis_high_type"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="100 Members"
                                android:textSize="15sp"
                                android:textColor="@color/material_on_surface_emphasis_medium"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:backgroundTint="#00000000"
                                android:layout_width="match_parent"
                                android:src="@drawable/next"
                                android:layout_height="75dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    app:strokeColor="@color/material_on_primary_emphasis_high_type"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/ic_baseline_book_24"
                                android:layout_margin="2dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Quran Lovers"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/material_on_surface_emphasis_high_type"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="100 Members"
                                android:textSize="15sp"
                                android:textColor="@color/material_on_surface_emphasis_medium"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:backgroundTint="#00000000"
                                android:layout_width="match_parent"
                                android:src="@drawable/next"
                                android:layout_height="75dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    app:strokeColor="@color/material_on_primary_emphasis_high_type"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/ic_baseline_book_24"
                                android:layout_margin="2dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Quran Lovers"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/material_on_surface_emphasis_high_type"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="100 Members"
                                android:textSize="15sp"
                                android:textColor="@color/material_on_surface_emphasis_medium"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:backgroundTint="#00000000"
                                android:layout_width="match_parent"
                                android:src="@drawable/next"
                                android:layout_height="75dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</ScrollView>