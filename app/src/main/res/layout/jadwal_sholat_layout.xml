<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1a1f38"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/indikator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:fontFamily="@font/lato_regular"
                android:text="Sekarang Jam"
                android:textColor="#FFF"
                android:textSize="22sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/prayerIndicatornow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="Ashar"
                android:textColor="#FFF"
                android:textSize="22sp" />

            <TextView
                android:fontFamily="@font/nunito_regular"
                android:id="@+id/clockCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="05:00:00"
                android:textColor="?clockTrackColor"
                android:textSize="80sp" />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/jadwal_sholat_list"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#2c304e"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Shubuh"
                        android:textColor="#FFF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/timeShubuh"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="?clockTrackColor"
                        android:textSize="30sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="#2c304e"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Dzuhur"
                        android:textColor="#FFF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/timeDzuhur"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="?clockTrackColor"
                        android:textSize="30sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#2c304e"
                android:layout_marginVertical="12dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Ashar"
                        android:textColor="#FFF"
                        android:textSize="30sp" />

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/timeAshar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="?clockTrackColor"
                        android:textSize="30sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#2c304e"
                android:layout_marginVertical="12dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Maghrib"
                        android:textColor="#FFF"
                        android:textSize="30sp" />

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/timeMaghrib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="?clockTrackColor"
                        android:textSize="30sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#2c304e"
                android:layout_marginVertical="12dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Isya"
                        android:textColor="#FFF"
                        android:textSize="30sp" />

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/timeIsya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="?clockTrackColor"
                        android:textSize="30sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/longlatTrack"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/latitudeText"
                android:layout_width="wrap_content"
                android:textColor="#FFF"
                android:text="Menampilkan jadwal sholat untuk lokasi:"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/locationNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Loading..."
                android:textColor="#FFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>