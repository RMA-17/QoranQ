<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title="Detail"
        app:menu="@menu/detail_header"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:layout_height="wrap_content"  />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/refugee"
        android:layout_height="230dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Donate"
            android:backgroundTint="#03A9F4"
            android:textAllCaps="false"
            android:textColor="@color/material_on_background_emphasis_high_type" />

    </RelativeLayout>
    <TextView
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:text="Help Refugee get Better \neducation"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:textSize="18sp"
        android:text="14 Days Left"
        android:layout_height="wrap_content"/>
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:strokeColor="@color/material_on_surface_stroke"
    android:elevation="10dp"
    app:strokeWidth="2dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="115dp">

        <TextView
            android:id="@+id/totaldonasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Donation Total"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lastComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="$60"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="25sp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_below="@id/lastComplete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="50%"
            android:textColor="@color/material_on_background_emphasis_high_type" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicatorProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totaldonasi"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:progress="50"
            app:indicatorColor="#121212"
            app:indicatorDirectionLinear="endToStart"
            app:trackColor="#03A9F4" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="match_parent"
        android:text="Campaign By:"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:elevation="30dp"
        android:layout_marginHorizontal="30dp"
        app:strokeColor="@color/material_on_primary_emphasis_high_type"
        app:strokeWidth="2dp"
        app:cardCornerRadius="10dp"
        android:layout_height="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="300dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_baseline_book_24"
                    android:layout_margin="2dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Dermawan Corp."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_on_surface_emphasis_high_type"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_width="match_parent"
        android:text="Donate Now"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        android:backgroundTint="#03A9F4"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>