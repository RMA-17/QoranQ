<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/clickableLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/frameNumber"
                android:layout_width="100dp"
                android:layout_margin="4dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ayah_frame"
                android:layout_height="60dp"
                app:tint="?colorPrimary" />

            <TextView
                android:id="@+id/surahlocator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/frameNumber"
                android:layout_alignTop="@+id/frameNumber"
                android:layout_alignEnd="@+id/frameNumber"
                android:layout_alignBottom="@+id/frameNumber"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/material_on_primary_emphasis_high_type"
                android:textSize="16sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/surahnameEN"
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:text="Surah Al-Fatihah"
                android:textColor="?colorPrimary"
                android:layout_marginStart="10dp"
                android:textSize="22sp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/turunDi"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:text="Meccan and Madinan"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/dots"
                    android:layout_width="wrap_content"
                    android:text="•"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ayatTotal"
                    android:layout_weight="8"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="286 Ayat"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/meccaormadina"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@id/surahNameArabic"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_mecca"
                app:tint="?colorControlNormal" />

            <TextView
                android:id="@+id/surahNameArabic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/utsmanichafs"
                android:gravity="center"
                android:text="الفاتحة"
                android:textColor="?colorPrimary"
                android:textSize="25sp" />

        </RelativeLayout>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        app:dividerThickness="1dp"
        android:layout_height="1dp"/>


</LinearLayout>