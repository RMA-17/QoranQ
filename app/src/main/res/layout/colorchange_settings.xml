<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="?bottomSheetDialogTheme"
    android:layout_height="300dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:text="Pilih Warna"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textSize="30sp"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:id="@+id/colorRadioGroup"
                android:checkedButton="@id/radioDefaultColor"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textSize="20sp"
                    android:id="@+id/radioDefaultColor"
                    android:buttonTint="?primaryDefault"
                    android:textColor="?primaryDefault"
                    android:text="Default (Purple)"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="20sp"
                    android:id="@+id/radioBlueColor"
                    android:buttonTint="?primaryBlueText"
                    android:textColor="?primaryBlue"
                    android:text="Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="20sp"
                    android:buttonTint="?primaryGreen"
                    android:textColor="?primaryGreen"
                    android:text="Green"
                    android:layout_width="match_parent"
                    android:id="@+id/radioGreenColor"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="20sp"
                    android:id="@+id/radioRedColor"
                    android:buttonTint="?primaryRed"
                    android:text="Red"
                    android:textColor="?primaryRedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>